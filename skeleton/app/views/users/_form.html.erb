<% if type == :new %>
  <% action_url = users_url %>
<% elsif type == :edit %>
  <% action_url = user_url(user) %>
<% end %>

<%= link_to "User Index", users_url %>

<form action="<%= action_url %>" method="POST">

  <% if type == :edit %>
    <input type="hidden" name="_method" value="PATCH" />
  <% end %>

  <label>
    User Name:
    <input type="text" name="user[user_name]" value="<%= user.user_name %>">
  </label>

  <label for="user_password"> Password: </label>
    <input id="user_password" type="password" name="user[password]">
  <button> Submit </button>
</form>


<a href="<%=cats_url %>"> Cats Home </a>
